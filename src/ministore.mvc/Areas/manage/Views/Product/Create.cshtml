
@model Product


<div class="container-fluid">
    <h1 class="mx-3">Create Product</h1>
    <div class="row justify-content-center flex-column align-items-center">
        <form class="col-md-8" asp-action="create" asp-asp-controller="product" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label asp-for="ImageUrl">Image</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Name">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>

                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>










        </form>
    </div>
</div>
